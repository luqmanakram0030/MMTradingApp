<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MMAdmin.Views.Components.ActivityButtonsTemplate"
             x:Name="activityButton">
    <Frame CornerRadius="8"
       HasShadow="False" Padding="20,30"
       BorderColor="{StaticResource PrimaryLightGray}"
       BackgroundColor="{StaticResource PrimaryLightGray}">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding Source={x:Reference activityButton}, Path=Command}"/>
        </Frame.GestureRecognizers>
        <StackLayout HorizontalOptions="CenterAndExpand">

            <Label FontFamily="Bold"
                    FontSize="16"
                    x:Name="activity"
                    HorizontalTextAlignment="Center"
                    TextColor="Black" />

            <Label FontFamily="Medium"
                    FontSize="12"
                    HorizontalTextAlignment="Center"
                    x:Name="text"
                    TextColor="Black" />
        </StackLayout>
    </Frame>
</ContentView>
